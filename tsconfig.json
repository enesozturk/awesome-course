{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["./utils/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015"],
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": true,
    "outDir": "lib",
    "strict": false,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["examples/**/*", "lib/**/*"],
  "include": ["src"]
}
